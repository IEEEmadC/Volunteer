<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <LinearLayout
        android:orientation="vertical" android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_parent"
        android:padding="10dp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:id="@+id/verticalLL1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:id="@+id/horizontalLL1">
                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/profileImage"
                        android:layout_margin="10dp"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/icon"
                        app:civ_border_width="2dp"
                        app:civ_border_color="#FF000000"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="24dp"
                            android:text="Mohanlal"
                            android:id="@+id/userName"
                            android:layout_marginTop="10dp"
                            android:textStyle="normal|bold|italic" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/userName"
                            android:id="@+id/timeStamp"
                            android:text="22 hrs ago"
                            android:textStyle="normal|italic" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/verticalLL2"
                android:layout_below="@+id/verticalLL1">
                <TextView
                    android:layout_width="match_parent"
                    android:padding="2dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/description"
                    android:text="@string/lorem"
                    android:textAlignment="viewStart" />
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true">
                <Button
                    android:text="Done!"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/done"
                    android:layout_alignRight="@+id/sep"/>
                <View
                    android:id="@+id/sep"
                    android:background="@color/black"
                    android:layout_width="1dp"
                    android:layout_alignTop="@+id/subreg"
                    android:layout_alignBottom="@+id/subreg"
                    android:layout_height="match_parent"
                    android:layout_centerHorizontal="true" />
                <Button
                    android:id="@+id/subreg"
                    android:text="Submit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/sep"/>
            </RelativeLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>
